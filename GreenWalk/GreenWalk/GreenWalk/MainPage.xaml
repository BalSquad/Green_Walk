<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GreenWalk"
             x:Class="GreenWalk.MainPage">
    <ContentPage.BackgroundColor>White</ContentPage.BackgroundColor>
    <StackLayout Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
        <Label Text="GREEN WALK" FontSize="34" Margin="0,0,0,70" HorizontalTextAlignment="Center" TextColor="#489D2C"/>
        <Image x:Name="Logo" HeightRequest="200" WidthRequest="200" Margin="0,0,0,70"/>
        <Label x:Name="splashLabel" HorizontalTextAlignment="Center" FontSize="Large" TextColor="White" FontAttributes="Bold" FontFamily="Open Sans">Prêts à nettoyer la planète ?</Label>
        <Button x:Name="splashButton" Text="Démarrer un trajet !" Clicked="SplashButton_Clicked" BackgroundColor="MediumSeaGreen" FontSize="Large" TextColor="White" FontAttributes="Bold" FontFamily="Open Sans"/>
        <Button x:Name="historiqueJourneyButton" Text="Mes trajets" Clicked="HistoriqueJourney_Clicked" BackgroundColor="MediumSeaGreen" FontSize="Large" TextColor="White" FontAttributes="Bold" FontFamily="Open Sans"/>

    </StackLayout>

</ContentPage>
