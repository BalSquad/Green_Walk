<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="GreenWalk.Pages.Run">
    <ContentPage.BackgroundColor>White</ContentPage.BackgroundColor>
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" TextColor="Black" Text="{Binding Time, StringFormat='{0:mm\\:ss\\:ff}'}" x:Name="TimerDisplay"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   FontSize="Medium">
            </Label>
            <maps:Map MapType="Street" Grid.Row="1"/>
            <Button x:Name="Stop" 
                    Text="Fini !" 
                    Clicked="Stop_Clicked" 
                    BackgroundColor="MediumSeaGreen" 
                    Grid.Row="2"
                    FontSize="Large" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    FontFamily="Open Sans"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>